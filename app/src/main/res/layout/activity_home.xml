<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#fff"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.Home">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User Profile"
        android:textSize="30dp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="email"
        android:textColor="#000"
        android:id="@+id/textViewEmail"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="First Name :"
        android:layout_below="@+id/textViewEmail"
        android:textColor="#000"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/textView3"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textViewFirstName"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Surname :"
        android:textColor="#000"
        android:layout_below="@+id/textViewFirstName"
        android:layout_alignParentStart="true"
        android:id="@+id/textView8"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewSurname"
        android:text=""
        android:textColor="#000"
        android:layout_below="@+id/textViewFirstName"
        android:layout_alignStart="@+id/textViewFirstName"
        android:layout_alignLeft="@+id/textViewFirstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Country :"
        android:textColor="#000"
        android:layout_below="@+id/textViewSurname"
        android:id="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewCountry"
        android:textColor="#000"
        android:text=""
        android:layout_alignStart="@+id/textViewFirstName"
        android:layout_below="@+id/textViewSurname"
        android:layout_alignLeft="@+id/textViewFirstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DOB :"
        android:textColor="#000"
        android:layout_below="@+id/textViewCountry"
        android:id="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewDOB"
        android:textColor="#000"
        android:text=""
        android:layout_below="@+id/textViewCountry"
        android:layout_alignStart="@+id/textViewFirstName"
        android:layout_alignLeft="@+id/textViewFirstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phone :"
        android:layout_below="@+id/textViewDOB"
        android:textColor="#000"
        android:id="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewPhone"
        android:textColor="#000"
        android:text=""
        android:layout_below="@+id/textViewDOB"
        android:layout_alignStart="@+id/textViewFirstName"
        android:layout_alignLeft="@+id/textViewFirstName" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="LogOut"
        android:id="@+id/buttonLogout"
        android:textColor="#fff"
        android:background="#3F51B5"
        android:layout_alignTop="@+id/buttonup"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="update profile"
        android:textColor="#fff"
        android:background="#3F51B5"
        android:id="@+id/buttonup"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Restaurants"
        android:textColor="#fff"
        android:background="#3F51B5"
        android:id="@+id/buttonrest"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
