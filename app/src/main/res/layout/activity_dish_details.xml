<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dishmenu.nerdcutlet.com.dishmenuandroidapp.activity.DishDetails">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="#000"
        android:text=""
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
        android:layout_below="@+id/textView9"
        android:layout_alignParentRight="true"
        android:background="#000"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discription"
        android:layout_marginTop="10dp"
        android:id="@+id/textView14"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_toRightOf="@+id/textView14"
        android:layout_toEndOf="@+id/textView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:id="@+id/textView16"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_alignTop="@+id/textView16"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_alignRight="@+id/textView15"
        android:layout_alignEnd="@+id/textView15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:id="@+id/textView18"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add to Order ?"
        android:id="@+id/button"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#fff"
        android:background="#3F51B5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp" />

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="centerInside"
        android:id="@+id/imageButton"
        android:src="@drawable/plus"
        android:background="#fff"
        android:layout_alignTop="@+id/textView18"
        android:layout_toRightOf="@+id/editText"
        android:layout_toEndOf="@+id/editText" />

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="centerInside"
        android:id="@+id/imageButton2"
        android:src="@drawable/minus"
        android:background="#fff"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="27dp"
        android:inputType="number"
        android:ems="10"
        android:textAlignment="center"
        android:id="@+id/editText"
        android:textSize="24sp"
        android:paddingBottom="0dp"
        android:textColorHint="#000"
        android:textColor="#000"
        android:paddingTop="0dp"
        android:background="@null"
        android:text="1"
        android:layout_centerHorizontal="@+id/imageButton2"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_toRightOf="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2" />

</RelativeLayout>
